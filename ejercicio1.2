package main

import "fmt"

func imprimirFigura(numElement int) {
	if numElement%2 == 0 || numElement < 0 { // Valida si el número ingresado es negativo o no es impar
		fmt.Println("Por favor ingrese un número impar positivo")
		return
	}

	numEspacios := (numElement - 1) / 2
	numAsteriscos := 1
	for i := 0; i < numElement; i++ {
		for j := 0; j < numEspacios; j++ {
			fmt.Print("  ")
		}
		for j := 0; j < numAsteriscos; j++ {
			fmt.Print("* ")
		}
		fmt.Println()
		if i < numElement/2 {
			numEspacios--
			numAsteriscos += 2
		} else {
			numEspacios++
			numAsteriscos -= 2
		}
	}
}

func main() {
	imprimirFigura(5)
	imprimirFigura(7)
	imprimirFigura(3)
	imprimirFigura(-3)
	imprimirFigura(4)
}
